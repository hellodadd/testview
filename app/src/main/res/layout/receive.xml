<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

    <FrameLayout
        android:id="@+id/frameLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_head_tran"
        android:orientation="vertical" >
        
        <Button
            android:id="@+id/changeBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="change"
            android:visibility="visible" />
        <Button
            android:id="@+id/saveBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="save"
            android:visibility="visible" />
        <Button
            android:id="@+id/orageBtn"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@color/orange"
            android:visibility="visible" />
        <Button
            android:id="@+id/purpleBtn"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@color/purple"
            android:visibility="visible" />
            <Button
            android:id="@+id/blueBtn"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@color/blue"
            android:visibility="visible" />
        <Button
            android:id="@+id/blackBtn"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@color/black"
            android:visibility="visible" />
        <Button
            android:id="@+id/whiteBtn"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@color/white"
            android:visibility="visible" />

        <Button
            android:id="@+id/colorBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="color"
            android:visibility="visible" />

        <Button
            android:id="@+id/cleanBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/clean_bg"
            android:visibility="visible" />

        <Button
            android:id="@+id/cleanAllBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/del_all_bg"
            android:visibility="visible" />
        
        
    </FrameLayout>

    

    <FrameLayout
        android:id="@+id/line"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="70dp" >
        
    <com.example.panel.SketchPadView
        android:id="@+id/sketchpad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
       </FrameLayout>

</RelativeLayout>